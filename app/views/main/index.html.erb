<h1>Gas Prices here...</h1>

<% if user_signed_in? %>
<% if current_user && current_user.admin %>
  <p>Welcome, Admin</p>
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
<% else%>
  <p> Welcome, <%= current_user.mobile_number %></p>
  <button id="open-modal-btn">Upload Gas Price</button>

  <div id="modal" class="modal">
    <div class="modal-content">
      <span class="close-btn">&times;</span>
      <h2>Upload Gas Price</h2>
      <%= render 'components/upload-form', upload: @upload %>
    </div>
  </div>

  <br><br>
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
<% end %>

<% else %>
  <p> Hello, Stranger </p>
  <%= link_to "Sign up", register_path %>
  <%= link_to "Log in", login_path %>
<% end %>

